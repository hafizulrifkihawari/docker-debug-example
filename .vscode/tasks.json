{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "docker-build",
			"label": "docker-build",
			"platform": "python",
			"dockerBuild": {
				"tag": "dockerdjangoexample:latest",
				"dockerfile": "${workspaceFolder}/Dockerfile",
				"context": "${workspaceFolder}",
				"pull": true
			}
		},
		{
			"type": "docker-run",
			"label": "docker-run: debug",
			"dependsOn": [
				"docker-build"
			],
			"python": {
				"args": [
					"runserver",
					"0.0.0.0:8003",
				],
				"file": "manage.py",
				"debugPort": 8003
			},
			"dockerRun": {
				"ports": [
					{
						"containerPort": 8003,
						"hostPort": 8003
					} 
				],
			}
		}
	]
}